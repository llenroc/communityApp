    <script type="text/javascript">

        function SetShortDescriptionFormat(elem) {
            var select1 = document.getElementById("ShortDescriptionFormatDropdown");
            var option1 = select1.options[select1.selectedIndex];
            if (option1.value == "text") {
                //$("#shortDescription").mask("", { placeholder: "Add Short Description" });
                $("#shortDescription").val("");
                $("#shortDescription").unmask();
                $("#shortDescription").css("display", "block");
                $("#shortDescription").css("z-index", "0");
                //$("#ShortDescriptionFormatDropdown").css("display", "none")

                $("#shortDescription").focus();

            }
            if (option1.value == "date") {
                $.mask.definitions['y'] = '[12]';
                $.mask.definitions['m'] = '[01]';
                $.mask.definitions['d'] = '[0-3]';
                $("#shortDescription").val("");
                $("#shortDescription").mask("d9/m9/y999 - d9/m9/y999", { placeholder: "dd/mm/yyyy - dd/mm/yyyy" });
                $("#shortDescription").css("display", "block");
                $("#shortDescription").css("z-index", "0");
                $("#shortDescription").focus();
                //$("#ShortDescriptionFormatDropdown").css("display", "none")

            }
            if (option1.value == "time") {
                //only Enter 1 and 2
                $.mask.definitions['H'] = '[12]';
                //only Enter 0,1,2,3,4
                $.mask.definitions['h'] = '[01234]';
                $.mask.definitions['M'] = '[12345]';
                $("#shortDescription").val("");
                $("#shortDescription").mask("Hh:M9 - Hh:M9", { placeholder: "HH:MM - HH:MM (24 hour Format)" });
                $("#shortDescription").css("z-index", "0");
                $("#shortDescription").css("display", "block");
                //$("#ShortDescriptionFormatDropdown").css("display", "none")
                $("#shortDescription").focus();

            }
        }


