<body>
    <div id="content">
        <div >
            <div  style="background-color: #0054a6;height: 15px;width:100%">
            </div>
        </div>



        <div style="    margin-top: 79px;margin-bottom:252px;">
            <div  style="margin: 0px;width: 67%;float: left;     padding-right: 1%;">
                <h1 style="text-transform:none;margin-left: 45px !important;     margin: 0px; color: #0054a6;font-family: Roboto-Light;font-size:37.5px;">iReports</h1>

                <h2 style="text-transform:none;margin-left: 45px !important; margin:0px; font-family: Roboto-Regular;font-size:41px">@Model.communityName</h2>

            </div>


            <div style="width: 32%;float: left;    margin-top: -27px;">
                <p class="UserDetail">  <span style="text-transform:none;    font-weight: bold;font-size:21px;font-family:Roboto-Medium">User:</span> <span style="font-size:21px;font-family:Roboto-Regular"> @Model.communityAdminEmail</span></p>
                <p class="UserDetail">     <span style="text-transform:none;    font-weight: bold;font-size:21px;font-family:Roboto-Medium">Address:</span> <span style="font-size:21px;font-family:Roboto-Regular"> @Model.communityAddress</span></p>
                  <p class="UserDetail">  <span style="text-transform:none;    font-weight: bold;font-size:21px;font-family:Roboto-Medium">Issued Date:</span> <span style="font-size:21px;font-family:Roboto-Regular"> @DateTime.Now.ToString("dd-MMM-yyyy")</span></p>

            </div>

        </div>








        <div class="row">
     


            <table id="PrintReport" class=" table table-striped" cellspacing="0" style="text-align:center;     width: 92%;   margin-left: 40px;   background-color: transparent;    border-top: 2px solid #898989;">
                <tbody id="tableBody">
                                        @foreach (var item in Model.complaints)
                                        {
                                            
                                            <tr >
                                                <td colspan="1"><p class="UserHeading">User ID:</p></td>
                                                <td ><p>@item.complaint.userID</p></td>
                                                <td colspan="1"><p class="UserHeading">User Name:</p></td>
                                                <td><p>@(item.complaint.user.firstName + " " + item.complaint.user.lastName)</p></td>
                                                <td colspan="1"><p class="UserHeading">Reported Date:</p></td>
                                                <td><p style="    margin-left: 1px;">@item.complaint.Date.ToString("dd-MMM-yyyy")</p></td>

                                            </tr>
                                            <tr style="display:none"></tr>
    <tr>
        <td colspan="1" class="noBorderTableRow"><p class="UserHeading" style="width: 102px">Report Status:</p></td>
        @if (item.complaint.complaintStatusID == 1)
        {
            <td class="noBorderTableRow"><p>Update</p></td>
    @*<td style=" width:15%;  ">
        <input id=@("pdfview"+item.complaint.complaintID) type="button" class="btn btn-primary" value="Update" style="font-size: 16px;font-family: Roboto-Regular;    background-color: transparent;color: #000000;border: transparent;" />

    </td>*@
        }
        @if (item.complaint.complaintStatusID == 2)
        {
            <td class="noBorderTableRow"><p>Received</p></td>

        }
        @if (item.complaint.complaintStatusID == 3)
        {
            <td class="noBorderTableRow"><p>Closed</p></td>

        }
       

@if (Model.isLocationInclude == true)
{
    <td class="noBorderTableRow" colspan="1"><p class="UserHeading">Report Category:</p></td>
    <td class="noBorderTableRow"><p>@item.complaint.CommunityiReports.iReportsName</p></td>
    <td class="noBorderTableRow" colspan="1"><p class="UserHeading">Address:</p></td>
    <td class="noBorderTableRow"><p>@item.complaint.address</p></td>
}
else
{
    <td class="noBorderTableRow" colspan="1"><p class="UserHeading">Report Category:</p></td>
    <td class="noBorderTableRow" colspan="1" style=""><p>@item.complaint.CommunityiReports.iReportsName</p></td>
    <td class="noBorderTableRow" colspan="1"><p class="UserHeading"></p></td>
    <td class="noBorderTableRow"><p></p></td>
} 


    </tr>
    <tr style="display:none"></tr>

    <tr>
        <td colspan="1" style="border-bottom: 2px solid #898989;" class="noBorderTableRow"><p class="UserHeading">Message:</p></td>
        <td colspan="5" style="border-bottom: 2px solid #898989;" class="noBorderTableRow">
            <p style="    width: 96% !important;    margin-bottom: 16px;">@item.complaint.desc</p><br />
            @if (Model.isImageInclude == true)
            {

                <ul>
                    @if (item.complaint.image1 != null)
                    {
                        <li>

                            <a data-toggle="modal" href=@("#" + item.complaint.complaintID) id="@("ahref" + item.complaint.complaintID)" onclick="setModalImageID(this.id)"><img src="@item.complaint.image1" class="ImagePreviewBox" id="@("image" + item.complaint.complaintID)" style="font-size: 16px;width: 134px;height: 80px;margin-top:1%;margin-bottom:2%;" /></a>


                        </li>
                    }
                    @if (item.complaint.image2 != null)
                    {
                        <li>

                            <a data-toggle="modal" href=@("#" + item.complaint.complaintID) id="@("ahref" + item.complaint.complaintID)" onclick="setModalImageID(this.id)"><img src="@item.complaint.image2" class="ImagePreviewBox" id="@("image" + item.complaint.complaintID)" style="font-size: 16px;width: 134px;height: 80px;margin-top:1%;margin-bottom:2%;" /></a>


                        </li>
                    }
                    @if (item.complaint.image3 != null)
                    {
                        <li>

                            <a data-toggle="modal" href=@("#" + item.complaint.complaintID) id="@("ahref" + item.complaint.complaintID)" onclick="setModalImageID(this.id)"><img src="@item.complaint.image3" class="ImagePreviewBox" id="@("image" + item.complaint.complaintID)" style="font-size: 16px;width: 134px;height: 80px;margin-top:1%;margin-bottom:2%;" /></a>


                        </li>
                    }
                </ul>

            }
        </td>
       

       
    </tr>














                 
